{
  "name": "electron-example-app",
  "version": "1.0.0",
  "description": "A simple Electron example application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && NODE_ENV=development electron .",
    "dev-fast": "nodemon --watch main.js --watch preload.js --exec \"electron .\"",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "example"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "css-loader": "^7.1.2",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.1.10",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "golden-layout": "^1.5.9",
    "node-pty": "^1.0.0",
    "split.js": "^1.6.5",
    "splitpanes": "^4.0.4"
  },
  "build": {
    "appId": "com.octo.app",
    "productName": "Octo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!src/",
      "!webpack.config.js",
      "!test-*.html",
      "!*.log"
    ],
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {},
    "linux": {
      "category": "Development"
    }
  }
}
